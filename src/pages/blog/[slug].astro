---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const categoryColors = {
  'EDUCACIÓN': 'bg-coral-100 text-coral-600',
  'MINDFULNESS': 'bg-purple-100 text-purple-600',
  'LIFESTYLE': 'bg-amber-100 text-amber-600',
  'PRÓXIMAMENTE': 'bg-gray-100 text-gray-600'
};

const categoryColor = categoryColors[post.data.category as keyof typeof categoryColors] || 'bg-gray-100 text-gray-600';

const formattedDate = new Intl.DateTimeFormat('es', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(post.data.pubDate);
---

<Layout title={`${post.data.title} | Blog - SexoloGabi`}>
  <article class="relative">
    
    <!-- Hero del artículo -->
    <section class="relative h-[60vh] min-h-[500px] flex items-end overflow-hidden">
      <img 
        src={post.data.image} 
        alt={post.data.title}
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
      
      <div class="relative z-10 w-full max-w-4xl mx-auto px-6 md:px-12 pb-16">
        <span class={`inline-block text-xs font-medium tracking-wider uppercase px-3 py-1.5 rounded-full mb-4 ${categoryColor}`}>
          {post.data.category}
        </span>
        <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-white leading-tight mb-4">
          {post.data.title}
        </h1>
        <div class="flex items-center gap-4 text-white/80 text-sm">
          <span>{post.data.author}</span>
          <span>•</span>
          <time datetime={post.data.pubDate.toISOString()}>
            {formattedDate}
          </time>
        </div>
      </div>
    </section>

    <!-- Contenido del artículo -->
    <section class="py-16 px-6 md:px-12">
      <div class="max-w-3xl mx-auto">
        
        <!-- Descripción -->
        <p class="text-xl text-dark/70 leading-relaxed mb-12 font-light border-l-4 border-coral-500 pl-6 italic">
          {post.data.description}
        </p>

        <!-- Contenido del artículo -->
        <div class="article-content prose prose-lg prose-gray max-w-none
          prose-headings:font-serif prose-headings:text-dark
          prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:font-normal
          prose-h3:text-2xl prose-h3:mt-10 prose-h3:mb-4 prose-h3:font-normal
          prose-h4:text-xl prose-h4:mt-8 prose-h4:mb-3
          prose-p:text-dark/80 prose-p:leading-relaxed prose-p:mb-6 prose-p:text-lg
          prose-a:text-coral-600 prose-a:no-underline hover:prose-a:underline
          prose-strong:text-dark prose-strong:font-semibold
          prose-em:italic prose-em:text-dark/70
          prose-blockquote:border-l-4 prose-blockquote:border-coral-500 prose-blockquote:pl-6 prose-blockquote:italic prose-blockquote:text-dark/70
          prose-ul:list-disc prose-ul:pl-6 prose-ul:my-6
          prose-ol:list-decimal prose-ol:pl-6 prose-ol:my-6
          prose-li:text-dark/80 prose-li:mb-2 prose-li:leading-relaxed
          prose-img:rounded-2xl prose-img:shadow-lg prose-img:my-8
          prose-hr:border-coral-200 prose-hr:my-12">
          <Content />
        </div>

        <style>
          .article-content :global(h2) {
            margin-top: 3rem;
            margin-bottom: 1.5rem;
            font-family: var(--font-serif);
          }
          
          .article-content :global(h3) {
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            font-family: var(--font-serif);
          }
          
          .article-content :global(p) {
            margin-bottom: 1.5rem;
            line-height: 1.8;
          }
          
          .article-content :global(ul),
          .article-content :global(ol) {
            margin: 1.5rem 0;
            padding-left: 1.5rem;
          }
          
          .article-content :global(li) {
            margin-bottom: 0.5rem;
          }
          
          .article-content :global(blockquote) {
            font-style: italic;
            border-left: 4px solid #FF6B6B;
            padding-left: 1.5rem;
            margin: 2rem 0;
          }
          
          .article-content :global(strong) {
            font-weight: 600;
            color: #1a1a1a;
          }
        </style>

        <!-- Separador -->
        <div class="flex justify-center my-16">
          <svg class="w-10 h-10 text-coral-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
          </svg>
        </div>

        <!-- Botón volver -->
        <div class="text-center">
          <Button variant="outline" size="md" href="/blog" class="group">
            <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            Volver al blog
          </Button>
        </div>
      </div>
    </section>

  </article>
</Layout>
