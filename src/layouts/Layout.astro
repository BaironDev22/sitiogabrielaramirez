---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'SexoloGabi - Inteligencia Sexual Consciente',
	description = 'Educaci√≥n sexual, cuerpo y placer desde la ciencia, la presencia y el ritual. No es entretenimiento, es entrenamiento √≠ntimo.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<style>
			/* Elementos con animaciones Motion empiezan ocultos para transici√≥n suave */
			[data-animate] {
				opacity: 0;
				will-change: transform, opacity;
			}
			
			/* Optimizaci√≥n de performance para animaciones */
			* {
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
			
			/* Scroll suave nativo - funciona con todos los m√©todos de scroll */
			html {
				scroll-behavior: smooth;
			}
			
			/* Personalizar scrollbar para mejor est√©tica */
			::-webkit-scrollbar {
				width: 10px;
			}
			
			::-webkit-scrollbar-track {
				background: #FFF2F0;
			}
			
			::-webkit-scrollbar-thumb {
				background: #D6664C;
				border-radius: 5px;
			}
			
			::-webkit-scrollbar-thumb:hover {
				background: #C04A2F;
			}

			/* Transiciones de p√°gina minimalistas */
			@view-transition {
				navigation: auto;
			}

			/* Animaci√≥n de salida - fade out con ligero desplazamiento */
			::view-transition-old(root) {
				animation: fadeOutSlide 0.5s cubic-bezier(0.4, 0, 0.6, 1);
			}

			/* Animaci√≥n de entrada - fade in con ligero desplazamiento */
			::view-transition-new(root) {
				animation: fadeInSlide 0.5s cubic-bezier(0.4, 0, 0.2, 1);
			}

			/* Hacer la transici√≥n m√°s visible durante el desarrollo */
			::view-transition-group(root) {
				animation-duration: 0.5s;
			}

			@keyframes fadeOutSlide {
				from {
					opacity: 1;
					transform: translateY(0) scale(1);
				}
				to {
					opacity: 0;
					transform: translateY(-20px) scale(0.98);
				}
			}

			@keyframes fadeInSlide {
				from {
					opacity: 0;
					transform: translateY(20px) scale(0.98);
				}
				to {
					opacity: 1;
					transform: translateY(0) scale(1);
				}
			}

			/* Fallback para navegadores sin soporte */
			@media (prefers-reduced-motion: reduce) {
				::view-transition-old(root),
				::view-transition-new(root) {
					animation: none !important;
				}
			}

			/* Indicador de carga durante la transici√≥n */
			html.is-transitioning::before {
				content: '';
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 3px;
				background: linear-gradient(90deg, #D6664C, #E8A598);
				z-index: 9999;
				animation: loadingBar 0.5s ease-in-out;
			}

			@keyframes loadingBar {
				from {
					transform: translateX(-100%);
				}
				to {
					transform: translateX(100%);
				}
			}
		</style>
	</head>
	<body class="bg-main text-dark">
		<Navbar />
		<main class="pt-20">
			<slot />
		</main>
		<Footer />
		
		<script>
			// Agregar clase durante la transici√≥n
			document.addEventListener('astro:before-preparation', () => {
				document.documentElement.classList.add('is-transitioning');
				console.log('üöÄ Transici√≥n iniciada');
			});

			// Remover clase despu√©s de la transici√≥n
			document.addEventListener('astro:after-swap', () => {
				document.documentElement.classList.remove('is-transitioning');
				console.log('‚úÖ Transici√≥n completada');
			});

			// Reiniciar animaciones de Motion despu√©s de cada transici√≥n de p√°gina
			document.addEventListener('astro:page-load', () => {
				// Reinicializar Motion si est√° disponible
				if (typeof window !== 'undefined' && 'initAllMotions' in window) {
					(window as any).initAllMotions();
				}
				console.log('üìÑ P√°gina cargada');
			});
		</script>
	</body>
</html>
