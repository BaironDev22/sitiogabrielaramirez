---
import '../styles/global.css';
import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'SexoloGabi - Inteligencia Sexual Consciente',
	description = 'Educación sexual, cuerpo y placer desde la ciencia, la presencia y el ritual. No es entretenimiento, es entrenamiento íntimo.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* Elementos con animaciones Motion empiezan ocultos */
			[data-animate] {
				opacity: 0;
			}
		</style>
	</head>
	<body class="bg-main text-dark">
		<Navbar />
		<main class="pt-20">
			<slot />
		</main>
		<Footer />

		<!-- Lenis Smooth Scroll -->
		<script>
			import Lenis from '@studio-freight/lenis';
			
			const lenis = new Lenis({
				duration: 1.2,
				easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
				orientation: 'vertical',
				smoothWheel: true,
			});

			function raf(time: number) {
				lenis.raf(time);
				requestAnimationFrame(raf);
			}

			requestAnimationFrame(raf);
		</script>
	</body>
</html>
