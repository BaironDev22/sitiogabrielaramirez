---
// Componente Card reutilizable
interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
  hover?: boolean;
}

const { 
  class: className = '', 
  padding = 'md',
  hover = false
} = Astro.props;

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const hoverStyles = hover ? 'hover:shadow-2xl hover:-translate-y-2 hover:shadow-coral-300/50' : '';

const classes = `bg-main rounded-2xl shadow-lg shadow-coral-200/30 transition-all duration-300 ${paddings[padding]} ${hoverStyles} ${className}`;
---

<div class={classes}>
  <slot />
</div>
