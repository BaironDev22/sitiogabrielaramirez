---
// Componente Card reutilizable
interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
  hover?: boolean;
}

const { 
  class: className = '', 
  padding = 'md',
  hover = false
} = Astro.props;

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const hoverStyles = hover ? 'hover:shadow-xl hover:-translate-y-1' : '';

const classes = `bg-main rounded-2xl shadow-lg transition-all duration-300 ${paddings[padding]} ${hoverStyles} ${className}`;
---

<div class={classes}>
  <slot />
</div>
